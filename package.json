{
  "name": "elsi",
  "version": "1.0.0",
  "description": "electron simple",
  "main": "src/main.js",
  "scripts": {
    "test": "error: no tests",
    "start": "electron .",
    "dev": "webpack-dev-server --no-info --quiet --port 4000 --config ./conf/webpack.dev.js",
    "build:prod": "npm run clean && webpack --config ./conf/webpack.prod.js",
    "build:dev": "npm run clean && webpack --config ./conf/webpack.dev.js",
    "rimraf": "rimraf",
    "clean": "npm run rimraf -- dist desktop dll",
    "build:desktop:win": "build --win --x64",
    "build:desktop:mac": "build --mac --x64"
  },
  "author": "js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/app-js/elsi.git"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "electron": "~1.6.1",
    "electron-builder": "^19.16.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.29.0",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "font-awesome": "^4.7.0"
  },
  "build": {
    "appId": "de.app-js.elsi",
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dir"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "win": {
      "target": [
        "dir"
      ]
    },
    "asar": false,
    "directories": {
      "buildResources": "src/assets",
      "output": "desktop",
      "app": "dist"
    }
  }
}
